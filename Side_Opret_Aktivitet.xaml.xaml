<Page x:Class="WpfApp1_SEFP_program_test2.Side_Opret_Aktivitet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1_SEFP_program_test2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Side_Opret_Aktivitet">

    <Grid>
        <Label Content="Opret ny aktivitet" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top"/>
        <Label Content="Navn på aktivitet" HorizontalAlignment="Left" Margin="331,157,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Ny_aktivitet_TextBox" HorizontalAlignment="Center" Margin="0,188,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="138"/>
        <Label Content="Antal deltagere" HorizontalAlignment="Center" Margin="0,215,0,0" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="Max_Deltagere_TextBox" HorizontalAlignment="Center" Margin="0,246,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="138"/>
        <Button Content="⚽ Opret aktivitet" HorizontalAlignment="Center" Margin="0,332,0,0" VerticalAlignment="Top" Width="138" Click="Opret_Aktivitet_Klik"/>
        <Label Content="Silkeborg Easy Football Planner" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top"/>
        <Button Content="Annuller" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" Width="138" Click="Cancel"/>
        <DatePicker x:Name="Aktivitet_DatoPicker" Loaded="Aktivitet_DatoPicker_Loaded" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
